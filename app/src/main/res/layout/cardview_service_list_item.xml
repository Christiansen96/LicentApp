<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/colorDarkBlue">

    <LinearLayout
        android:id="@+id/ServiceItemLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="120">

        <ImageView
            android:id="@+id/ServiceItemImageId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="50"
            android:minHeight="50dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/ServiceItemNameId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="15"
            android:maxHeight="10dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/ServiceItemShortDescriptionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="40"
            android:minHeight="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/ServiceItemDurationId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="50"
                android:gravity="start" />

            <TextView
                android:id="@+id/ServiceItemPriceId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_weight="50"
                android:gravity="end" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>