<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/ScrollViewId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/OpenedProviderImageId"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/OpenedProviderIconId"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/OpenedProviderNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="La gicu"
                android:layout_alignLeft="@id/OpenedProviderIconId"
                android:layout_alignRight="@id/OpenedProviderIconId"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="20sp"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ServiceListRecyclerViewId"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
